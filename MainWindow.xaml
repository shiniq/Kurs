<Window x:Class="Student.MainWindow"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     Title="Analysis" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Content="Просмотреть список преподавателей" FontSize="20" Click="ViewTeachers_Click" />
            <Button Content="Просмотреть список студентов" FontSize="20" Click="ViewStudents_Click" />
            <Button Content="Просмотреть список предметов" FontSize="20" Click="ViewSubjects_Click" />
            <Button Content="Просмотреть список оценок" FontSize="20" Click="ViewGrades_Click" />
            <Button Content="Просмотреть список пропусков" FontSize="20" Click="ViewAbsences_Click" />
            <Button Content="Просмотреть Анализ Оценок" FontSize="20" Click="Button_Click" />
            <Button Content="Выйти" FontSize="20" Click="Exit_Click" />
        </StackPanel>
    </Grid>
</Window>